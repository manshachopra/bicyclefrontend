pipeline{
    agent any
    environment{
        NODE_ENV='development'
    }
    tools{
        nodejs'23.11.0'
    }
    stages{
        stage('clone repository'){
            steps{
                https://github.com/manshachopra/bicyclefrontend.git
            }
        }
        stage('install dependencies'){
            steps{
                bat'npm install'    
            }
        }
        stage('run'){
            steps{
                bat'ng serve'
            }
        }
    }
    post {
        success {
            echo "Build Succeeded: Pipeline complete."
        }
        failure {
            echo "Build Failed: check errors"
        }
    }
}